<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMassignmentEight.Views.ContactDetailsPage">
    <VerticalStackLayout Padding="20">
        <Label Text="{Binding Contact.Name}" FontAttributes="Bold" FontSize="24" />
        <Label Text="{Binding Contact.Email}" />
        <Label Text="{Binding Contact.PhoneNumber}" />
        <Label Text="{Binding Contact.Description}" />
        <Button Text="Back" Clicked="OnBackButtonClicked" />
    </VerticalStackLayout>
</ContentPage>
